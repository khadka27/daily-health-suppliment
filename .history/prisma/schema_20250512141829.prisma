// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Change to your preferred database provider (postgresql, mysql, sqlite, sqlserver, mongodb)
  url      = env("DATABASE_URL")
}

model Article {
  id                 String    @id @default(cuid())
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  title              String
  overview           String    @db.Text
  description        String    @db.Text
  howToTake          String    @db.Text
  benefits           Json      // Array of objects with title and description
  overallRating      Float
  ingredientsRating  Float
  valueRating        Float
  manufacturerRating Float
  safetyRating       Float
  brandHighlights    Json      // Array of strings
  keyIngredients     Json      // Array of strings
  pros               Json      // Array of strings
  cons               Json      // Array of strings
  safety             String    @db.Text
  effectiveness      String    @db.Text
  pricing            Json      // Object with singleBottle, threeBottles, sixBottles
  manufacturerInfo   Json      // Object with name, location, description
  howItWorks         String    @db.Text
  ingredients        Json      // Array of objects with name, description, benefits
  faqs               Json      // Array of objects with question, answer
  customerReviews    Json      // Array of objects with name, location, rating, review
  conclusion         String    @db.Text
  officialWebsite    String
  productImage       String    @db.Text
  ctaButtons         Json      // Array of objects with text, url, type, position, description
}